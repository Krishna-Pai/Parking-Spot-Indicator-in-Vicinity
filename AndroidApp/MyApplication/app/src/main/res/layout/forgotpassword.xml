<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:gravity="center">
    <EditText
        android:id="@+id/checkid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your User iD"
        android:textColorHint="#fff"
        android:fontFamily="@font/montserrat"
        android:textColor="#fff"
        android:gravity="center_horizontal" />
    <Button
        android:id="@+id/reqcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REQUEST CODE"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="33sp"
        android:background="#b4004e"
        android:textColor="#fff"/>
    <EditText
        android:id="@+id/entercode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your Verification Code"
        android:layout_marginTop="45sp"
        android:textColorHint="#fff"
        android:fontFamily="@font/montserrat"
        android:textColor="#fff"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/enternewpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your new Password"
        android:layout_marginTop="13sp"
        android:textColorHint="#fff"
        android:fontFamily="@font/montserrat"
        android:textColor="#fff"
        android:gravity="center_horizontal" />
    <Button
        android:id="@+id/respwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="33sp"
        android:background="#b4004e"
        android:textColor="#fff"/>

</LinearLayout>